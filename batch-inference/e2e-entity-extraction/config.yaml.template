# Unity Catalog Configuration
catalog: ""
schema: ""

# Volume paths
volumes:
  source_documents: /Volumes/${catalog}/${schema}/source_documents
  checkpoints: /Volumes/${catalog}/${schema}/checkpoints

# Table names
tables:
  parsed_documents: parsed_documents
  extracted_claims: extracted_claims
  evaluation: evaluation_dataset

# Model Serving
model:
  name: claims-extraction-agent
  endpoint_name: claims-extraction-agent

# MLflow Configuration
mlflow:
  experiment_id: "123456789"  # Update with your experiment ID

# Databricks Configuration
databricks:
  host: https://your-workspace.cloud.databricks.com  # Update with your workspace URL
  secret_scope: your-secret-scope  # Secret scope containing the PAT
  secret_key: databricks-pat  # Key name for the PAT token

# LLM Configuration
llm:
  endpoint: databricks-claude-sonnet-4-5

# Evaluation
evaluation:
  sample_rate: 0.1
  dataset_size: 100  # Number of documents to sample for evaluation
  min_confidence: 0.7  # Minimum classification confidence for ground truth
  sampling_strategy: stratified  # "stratified" or "random"
